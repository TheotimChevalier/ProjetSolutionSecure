@model Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        @if (Model.AdditionalInformation != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdditionalInformation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdditionalInformation)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
</div>
<div>
    @if ((User.Identity?.IsAuthenticated ?? false) && ((User.IsInRole("Manager_Moteur")) | User.IsInRole("Admin")) && Model.Type == ProductType.Moteur)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <text> | </text>
    }
    else if ((User.Identity?.IsAuthenticated ?? false) && ((User.IsInRole("Manager_Carrosserie")) | User.IsInRole("Admin")) && Model.Type == ProductType.Carrosserie)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <text> | </text>
    }
    else if ((User.Identity?.IsAuthenticated ?? false) && ((User.IsInRole("Manager_Peinture")) | User.IsInRole("Admin")) && Model.Type == ProductType.Peinture)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <text> | </text>
    }
    <a asp-action="Index">Back to List</a>
</div>
